<!DOCTYPE html>
<html lang="en" ng-app="mosquitoApp">
  <head>
    <%- include('header'); %>
    <title>MosquitoDB | Log In</title>
    <script type="text/javascript" src="javascripts/account.js"></script>
  </head>
  <%- include('navbar'); %>
  <body ng-app="mosquitoApp" ng-controller="accountController" ng-cloak>
    <div id="login-form" class="container" ng-hide="isRegistering">
      <div id="error-alert" class="alert alert-warning col-md-6 col-md-offset-3 text-center" ng-show="error">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{error}}
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <label for="name">Username</label>
          <input class="form-control" ng-model="name" max-length="63" type="text" placeholder="username" required/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <label for="pass1">Password</label>
          <input class="form-control" ng-model="pass" max-length="63" type="password" placeholder="password" required/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <button class="btn btn-success pull-right" ng-click="login();">Log In</button>
        </div>
      </div>
      <div class="row">
        <h3 class="text-center">Or <a href="/register">register here</a></h3>
      </div>
    </div>
    <div id="register-form" class="container" ng-show="isRegistering">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <label for="name">Username</label>
          <input class="form-control" ng-model="name" max-length="63" type="text" placeholder="SuperResearcher" required/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <label for="organization">Organization</label>
          <input class="form-control" ng-model="organization" max-length="255" type="text" placeholder="ASU" required/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <label for="email">Email</label>
          <input class="form-control" ng-model="email" max-length="255" type="email" placeholder="email@domain.com" required/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <label for="pass1">Password</label>
          <input class="form-control" ng-model="pass1" max-length="31" type="password" placeholder="something secure" required/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <label for="pass2">Retype Password</label>
          <input class="form-control" ng-model="pass2" max-length="31" type="password" placeholder="verified password" required/>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <button class="btn btn-success pull-right" ng-click="register();">Register</button>
        </div>
      </div>
    </div>
  </body>
  <%- include('footer'); %>
</html>
